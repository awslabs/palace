+   patch(1,0,1) = -0.5*l;
+
+   patch(0,1,0) = -0.5*l;
+   patch(0,1,1) = 0.5*l;
+
+   patch(1,1,0) = 0.5*l;
+   patch(1,1,1) = 0.5*l;
