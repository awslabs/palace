+      if (n < smesh.GetNE() && smesh.GetAttribute(n) == 2)
+      {
+         el_to_refine[0] = n;
+         CAPTURE(n);
+         smesh.GeneralRefinement(el_to_refine);
+         CheckSerialNDConformal(smesh, ntdof, -1);
