{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Configuration File Schema -- \"Problem\"",
  "type": "object",
  "additionalProperties": false,
  "required": ["Type"],
  "properties":
  {
    "Type":
    {
      "type": "string",
      "enum": ["Eigenmode", "Driven", "Transient", "Electrostatic", "Magnetostatic"]
    },
    "Verbose": { "type": "integer", "minimum": 0 },
    "Output": { "type": "string" },
    "OutputFormats":
    {
      "type": "object",
      "additionalProperties": false,
      "properties":
      {
        "Paraview": { "type": "boolean" },
        "GridFunction": { "type": "boolean" }
      }
    }
  }
}
